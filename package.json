{
	"name": "@ctx-core/sass-build",
	"version": "3.1.251",
	"description": "ctx-core sass build scripts",
	"keywords": [
		"ctx-core",
		"sass"
	],
	"homepage": "https://github.com/ctx-core/sass-build#readme",
	"bugs": {
		"url": "https://github.com/ctx-core/sass-build/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ctx-core/sass-build.git"
	},
	"license": "Apache-2.0",
	"author": "Brian Takita",
	"type": "module",
	"types": "./src/index.d.ts",
	"exports": {
		".": "./src/index.js",
		"./package.json": "./package.json"
	},
	"bin": {
		"sass-build.sh": "bin/sass-build.sh",
		"sass-cmd.js": "bin/sass-cmd.mjs",
		"sass-watch.sh": "bin/sass-watch.sh"
	},
	"scripts": {
		"build": ":",
		"clean": ":",
		"exec": "$@",
		"prepublishOnly": "pnpm clean && pnpm build && pnpm test",
		"test": "pnpm test-unit && check-dts",
		"test-unit": "tsx node_modules/uvu/bin.js . '\\.test\\.(ts|js)$'",
		"test-unit-coverage": "c8 pnpm test-unit"
	},
	"dependencies": {
		"@ctx-core/cli-args": "^11.3.41",
		"@ctx-core/env": "^17.3.9",
		"import-meta-resolve": "^3.0.0",
		"node-sass-package-importer": "^5.3.3",
		"nodemon": "^3.0.1",
		"resolve": "^1.22.8",
		"sass": "^1.69.3"
	},
	"devDependencies": {
		"c8": "^8.0.1",
		"check-dts": "^0.7.2",
		"tsx": "^3.13.0",
		"typescript": "next",
		"uvu": "^0.5.6"
	},
	"publishConfig": {
		"access": "public",
		"cache": "~/.npm"
	},
	"svelte": "./lib/index.js",
	"sideEffects": false
}